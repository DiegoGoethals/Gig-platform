@page "/"
@inherits SecurePageBase

@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

@if (User == null)
{
    <p>Loading...</p>
}
else if (User.Claims.Any(c => c.Type.Contains("role") && c.Value == "Employer"))
{
    <Menu User="User" AuthStateProvider="AuthStateProvider" NavigationManager="NavigationManager"/>
    <EmployerHome User="User" NavigationManager="NavigationManager"/>
}
else
{
    <Menu User="User" AuthStateProvider="AuthStateProvider" NavigationManager="NavigationManager" />
    <EmployeeHome NavigationManager="NavigationManager" />
}

