@page "/home"
@inherits SecurePageBase

@rendermode InteractiveServer

@inject IApplicationService ApplicationService
@inject TranslationService TranslationService

<PageTitle>Home</PageTitle>

@if (User == null)
{
    <Loader/>
}
else if (User.Claims.Any(c => c.Type.Contains("role") && c.Value == "Employer"))
{
    <Header User="User" AuthStateProvider="AuthStateProvider" NavigationManager="NavigationManager" />
    <EmployerHome User="User" NavigationManager="NavigationManager" ApplicationService="ApplicationService" TranslationService="TranslationService" JSRuntime="JSRuntime"/>
}
else
{
    <Header User="User" AuthStateProvider="AuthStateProvider" NavigationManager="NavigationManager" />
    <EmployeeHome User="User" NavigationManager="NavigationManager" ApplicationService="ApplicationService" TranslationService="TranslationService" JSRuntime="JSRuntime" />
}

